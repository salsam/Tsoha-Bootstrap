#!/bin/bash
setfacl -m u:www-data:r-- .htaccess
setfacl -m u:www-data:r-- vendor/bootstrap/js/bootstrap.min.js
setfacl -m u:www-data:r-- vendor/bootstrap/css/bootstrap.min.css
setfacl -m u:www-data:r-- vendor/jquery.min.js
setfacl -m u:www-data:r-- assets/js/site.js
setfacl -m u:www-data:r-- assets/css/site.css
setfacl -m u:www-data:--x vendor/bootstrap/js
setfacl -m u:www-data:--x vendor/bootstrap/css
setfacl -m u:www-data:--x vendor/bootstrap/
setfacl -m u:www-data:--x vendor/
setfacl -m u:www-data:--x assets/css
setfacl -m u:www-data:--x assets/js
setfacl -m u:www-data:--x assets/
